<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="se.eyevinn.application.MainActivity">

    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/inputtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avatarImageView"
        android:hint="Paste a stream Uri here .."
        android:selectAllOnFocus="true"
        android:selectable="true"
        android:textIsSelectable="true" />

    <LinearLayout
        android:id="@+id/buttonpanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputtext"
        android:orientation="horizontal">

        <Button
            android:id="@+id/hlsVodButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HLS VOD" />

        <Button
            android:id="@+id/mpdVodButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MPD_VOD" />

        <Button
            android:id="@+id/hlsLiveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HLS_LIVE" />

        <Button
            android:id="@+id/mpdLiveButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MPD_LIVE" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonpanel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonpanel"
        android:orientation="horizontal">

        <Button
            android:id="@+id/hlsLiveSsaiButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HLS_LIVE_SSAI" />

        <Button
            android:id="@+id/loadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:text="Load"></Button>
    </LinearLayout>


    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/exo_player_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/buttonpanel2"
        android:layout_marginTop="2dp"
        android:focusable="true" />
</RelativeLayout>